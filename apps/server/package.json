{
  "name": "server",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm docker:up && pnpm db:migrate:dep && pnpm db:generate && nest start --watch",
    "docker:up": "docker compose up -d",
    "db:migrate:dev": "pnpm prisma migrate dev --name init",
    "db:migrate:dep": "pnpm prisma migrate deploy",
    "db:generate": "pnpm prisma generate",
    "db:seed": "ts-node prisma/seeds/seed.ts",
    "db:studio": "pnpm prisma studio",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix",
    "prettier": "prettier --write \"src/**/*.{js,ts}\"",
    "format": "pnpm type-check && pnpm lint && pnpm prettier",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build": "nest build",
    "postbuild": "pnpm db:migrate:dep",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/common": "^11.0.7",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.7",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.7",
    "@nestjs/platform-fastify": "^11.0.7",
    "@nestjs/schedule": "^5.0.1",
    "@prisma/client": "^6.3.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cron": "^3.5.0",
    "fastify": "^5.2.1",
    "graphql": "^16.10.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.3",
    "nestjs-resend": "^1.0.1",
    "nodemailer": "^6.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
