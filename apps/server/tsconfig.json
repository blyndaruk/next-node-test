{
  "include": [
    "src/**/*.ts",
    "prisma/seeds/seed.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "node_modules",
    "eslint.config.js",
    "test/**/*.ts"
  ]
}
