generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  email     String  @unique
  firstname String
  lastname  String? @default("")
  password  String
  role      Role?   @default(ADMIN)

  @@map("users")
}

enum Role {
  ROOT
  ADMIN
  EMPLOYEE
}
